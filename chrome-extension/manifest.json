{
  "manifest_version": 3,
  "name": "Accessibility Toolbar",
  "version": "1.0",
  "description": "Dissertation Accessibility Toolbar",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["toolbar/css/toolbar.css", "toolbar/css/dictionary.css", "toolbar/css/magnify.css", "toolbar/css/text.css", "toolbar/css/theme.css", "toolbar/css/translate.css", "toolbar/css/play.css"],
      "js": ["toolbar/toolbar.js", "packages/html2canvas.js"]
    }
  ],
  "icons": {
      "128": "icons/icon128.png",
      "48": "icons/icon48.png",
      "16": "icons/icon16.png"
  },
  "action": {
      "default_icon": "icons/icon16.png",
      "default_popup": "pages/popup.html",
      "default_title": "Detect image tags"
  },
  "permissions": [
      "storage",
      "tabs"
  ],
  "background": {
    "service_worker": "toolbar/background.js"
  },
  "web_accessible_resources": [
	{
	  "resources": ["toolbar/assets/buttons/*", "toolbar/scripts/*.js", "toolbar/assets/languages/supported_languages.json", "packages/html2canvas.js", "pages/popup.html", "pages/manual.html"],
	  "matches": ["<all_urls>"]
	}
  ]
}


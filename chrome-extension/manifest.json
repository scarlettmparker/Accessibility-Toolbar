{
  "manifest_version": 3,
  "name": "Accessibility Toolbar",
  "version": "1.0",
  "description": "Dissertation Accessibility Toolbar",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["toolbar/toolbar.css", "toolbar/text.css", "toolbar/theme.css", "toolbar/translate.css", "toolbar/dictionary.css"],
      "js": ["toolbar/toolbar.js"]
    }
  ],
  "icons": {
      "128": "icons/icon128.png",
      "48": "icons/icon48.png",
      "16": "icons/icon16.png"
  },
  "action": {
      "default_icon": "icons/icon16.png",
      "default_popup": "popup.html",
      "default_title": "Detect image tags"
  },
  "permissions": [
      "storage"
  ],
  "background": {
    "script": ["background.js", "jquery-3.7.1.min.js"]
  },
  "web_accessible_resources": [
	{
	  "resources": ["toolbar/assets/buttons/*", "toolbar/scripts/*.js", "toolbar/assets/languages/supported_languages.json"],
	  "matches": ["<all_urls>"]
	}
  ]
}

